    "check": "run-s format lint test",
    "build": "run-s check compile"
  },
  "keywords": [
    "Java",
    "MUTF-8"
  ],
  "author": "sciencesakura",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "jest": "^26.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
