{
  "name": "mutf-8",
  "version": "0.0.1",
  "description": "An encoder/decoder for Modified UTF-8 which is used in the Java platform such as the class file format or the object serialization.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "format": "prettier --print-width 120 --write src",
    "lint": "eslint --fix src",
    "lint-nofix": "eslint src",
    "compile": "run-s compile:*",
    "compile:cjs": "tsc --module commonjs && mv dist/index.js dist/index.cjs",
    "compile:esm": "tsc --module es2015   && mv dist/index.js dist/index.mjs",
    "test": "jest",
    "check": "run-s format lint test",
    "build": "run-s clean check compile",
    "build:ci": "run-s lint-nofix test compile",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sciencesakura/mutf-8.git"
  },
  "keywords": [
    "Java",
    "MUTF-8"
  ],
  "author": "sciencesakura <sakurasakurascience@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sciencesakura/mutf-8/issues"
  },
  "homepage": "https://github.com/sciencesakura/mutf-8#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "jest": "^26.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
